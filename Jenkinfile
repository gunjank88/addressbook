pipeline {
    
    agent { node { label 'master'  } }

     tools {
        maven 'Maven' 
        jdk 'Java 1.8'
    }
     
     stages {
         stage('Run in parallel') {
             parallel {
                  stage('Code validate') {
                    steps {
                          sh 'mvn validate'
                 }
             }
                 stage('Code Compile') {
                     steps {
                          sh 'mvn compile'
            }
        }
     }
    }
        stage('Code validate') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Code compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Code Test') {
            steps {
                sh 'mvn test'
            }
        }
         stage('Code Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

}

